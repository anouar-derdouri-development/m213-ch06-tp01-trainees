<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ex06Activity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <View
        android:id="@+id/vQ01"
        android:layout_width="@dimen/d_portrait"
        android:layout_height="@dimen/d_portrait"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="#7fba00"
        app:layout_constraintBottom_toTopOf="@+id/guidelineH"
        app:layout_constraintStart_toStartOf="@+id/guidelineV" />

    <View
        android:id="@+id/vQ02"
        android:layout_width="@dimen/d_portrait"
        android:layout_height="@dimen/d_portrait"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#f25022"
        app:layout_constraintBottom_toTopOf="@+id/guidelineH"
        app:layout_constraintEnd_toStartOf="@+id/guidelineV" />

    <View
        android:id="@+id/vQ04"
        android:layout_width="@dimen/d_portrait"
        android:layout_height="@dimen/d_portrait"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#ffb900"
        app:layout_constraintStart_toStartOf="@+id/guidelineV"
        app:layout_constraintTop_toTopOf="@+id/guidelineH" />

    <View
        android:id="@+id/vQ03"
        android:layout_width="@dimen/d_portrait"
        android:layout_height="@dimen/d_portrait"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#00a4ef"
        app:layout_constraintEnd_toStartOf="@+id/guidelineV"
        app:layout_constraintTop_toTopOf="@+id/guidelineH" />
</androidx.constraintlayout.widget.ConstraintLayout>